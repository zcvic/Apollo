package(default_visibility = ["//visibility:public"])

# Libs provided by the system.

# libncurses5-dev
cc_library(
    name = "ncurses",
    linkopts = ["-lncurses"],
)

# libpoco-dev
cc_library(
    name = "PocoFoundation",
    linkopts = ["-lPocoFoundation"],
)

cc_library(
    name = "pthread",
    linkopts = ["-pthread"],
)

# python3-dev
cc_library(
    name = "python3",
    linkopts = ["-lpython3.6m"],
)

cc_library(
    name = "rt",
    linkopts = ["-lrt"],
)

# libsqlite3-dev
cc_library(
    name = "sqlite3",
    linkopts = ["-lsqlite3"],
)

# uuid-dev
cc_library(
    name = "uuid",
    linkopts = ["-luuid"],
)
